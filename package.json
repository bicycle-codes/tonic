{
  "name": "@nichoth/tonic",
  "version": "15.3.0",
  "description": "A component framework.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "standard .",
    "test": "npm run build && npm run lint && esbuild --bundle test/index.js | tape-run",
    "ci:test:tape-run": "esbuild --bundle test/index.js | tape-run",
    "test:open": "npm run build && esbuild --bundle test/index.js | tape-run --browser chrome --keep-open",
    "build:base": "esbuild src/index.js --define:VERSION=\\\"$npm_package_version\\\" --outfile=index.js",
    "build:minify": "esbuild index.js --keep-names --minify --outfile=dist/tonic.min.js",
    "build": "npm run build:base && npm run build:minify",
    "changelog": "auto-changelog --template keepachangelog --breaking-pattern 'BREAKING CHANGE' && git add CHANGELOG.md && git commit -m 'changelog'",
    "preversion": "npm run lint",
    "prepublishOnly": "npm run build",
    "postversion": "npm run changelog && git push --follow-tags && npm publish"
  },
  "devDependencies": {
    "@nichoth/tapzero": "0.8.4",
    "auto-changelog": "2.4.0",
    "benchmark": "^2.1.4",
    "esbuild": "^0.19.10",
    "standard": "^17.0.0",
    "tape-run": "^11.0.0",
    "uuid": "^9.0.0"
  },
  "contributors": [
    {
      "name": "nichoth",
      "email": "nichoth@nichoth.com",
      "url": "https://nichoth.com/"
    },
    {
      "name": "Raynos",
      "email": "raynos2@gmail.com"
    }
  ],
  "license": "MIT",
  "standard": {
    "ignore": [
      "test/fixtures/*"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/tonic.git"
  },
  "bugs": {
    "url": "https://github.com/nichoth/tonic/issues"
  },
  "homepage": "https://tonicframework.dev"
}
